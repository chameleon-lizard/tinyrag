{
  "name": "AI QA Extension",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Chrome extension to chat with webpages. https://github.com/chameleon-lizard/tinyrag",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "mark.min.js",
        "contentScript.js",
        "transformers.js"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}
